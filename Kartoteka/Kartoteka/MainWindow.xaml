<Window x:Class="Kartoteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kartoteka"
        mc:Ignorable="d"
        Title="Logowanie" Height="400" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="0">
            <Label FontSize="18" Content="Login" Height="34"/>
            <TextBox x:Name="txtLogin" FontSize="18" Height="34" Width="150"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <Label FontSize="18" Content="Hasło" Height="34"/>
            <PasswordBox x:Name="pswHaslo" FontSize="18" Height="34" Width="150"/>
        </StackPanel>
        <Button x:Name="btnZaloguj" FontSize="18" Height="34" Content="Zaloguj" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Width="100" Click="BtnZaloguj_Click"/>
    </Grid>
</Window>
